<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:showIn="@layout/activity_about_us"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".aboutUs.AboutUsActivity">
	
	<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="300dp"
			android:background="@android:color/holo_green_light"
			app:cardCornerRadius="4dp"
			app:cardElevation="6dp"
			app:cardBackgroundColor="@color/offwhite"
			android:layout_margin="@dimen/text_margin">
		
		<RelativeLayout android:layout_width="match_parent"
					  android:orientation="vertical"
					  android:padding="@dimen/activity_vertical_margin"
					  android:layout_height="match_parent">
			
			<de.hdodenhof.circleimageview.CircleImageView
					android:layout_width="96dp"
					android:id="@+id/img_head"
					android:src="@drawable/img_shadab"
					android:layout_marginEnd="10dp"
					android:layout_height="96dp"/>
			
			<TextView android:layout_width="match_parent"
				  android:text="@string/about_us_name"
				  android:layout_toEndOf="@id/img_head"
				  android:id="@+id/txt_name1"
				  style="@style/labelStyleMedium"
				  android:textColor="@android:color/black"
				  android:layout_height="wrap_content"/>
			
			<TextView android:layout_width="match_parent"
					  android:text="@string/about_us_designation"
					  android:layout_toEndOf="@+id/img_head"
					  style="@style/labelStyleSmall"
					  android:id="@+id/designation1"
					  android:layout_below="@id/txt_name1"
					  android:layout_height="wrap_content"/>
			
			<TextView android:layout_width="match_parent"
					  android:text="@string/about_us_name2"
					  android:layout_toEndOf="@id/img_head"
					  android:id="@+id/txt_name2"
					  android:layout_marginTop="10dp"
					  android:layout_below="@id/designation1"
					  style="@style/labelStyleMedium"
					  android:textColor="@android:color/black"
					  android:layout_height="wrap_content"/>
			
			<TextView android:layout_width="match_parent"
					  android:text="@string/about_us_designation2"
					  android:layout_toEndOf="@+id/img_head"
					  style="@style/labelStyleSmall"
					  android:layout_below="@id/txt_name2"
					  android:layout_height="wrap_content"/>
			
			<ImageView android:layout_width="45dp"
					   android:layout_height="45dp"
					   android:layout_marginTop="30dp"
					   android:id="@+id/facebook"
					   android:src="@drawable/ic_facebook"
					   android:layout_below="@id/img_head"/>
			
			<ImageView android:layout_width="45dp"
					   android:layout_height="45dp"
					   android:layout_marginTop="30dp"
					   android:layout_marginStart="@dimen/activity_vertical_margin"
					   android:layout_toEndOf="@id/facebook"
					   android:id="@+id/twitter"
					   android:src="@drawable/ic_twitter"
					   android:layout_below="@id/img_head"/>
			
			<ImageView android:layout_width="45dp"
					   android:layout_height="45dp"
					   android:layout_marginTop="30dp"
					   android:layout_toEndOf="@id/twitter"
					   android:layout_marginStart="@dimen/activity_vertical_margin"
					   android:id="@+id/instagram"
					   android:src="@drawable/ic_instagram"
					   android:layout_below="@id/img_head"/>
			
		</RelativeLayout>
		
		
	</androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>